<!--顯示所有文章 (韓日期)-->
<% if (pagination == 2){ %>

    <% page.posts.each(function(post){ %>
        <!--顯示首頁的文章-->
      <%- partial('partial/indexArticle', {post: post, index: true}) %>
    <% }) %>
    
  <% } else { %>
    <% var last; var number = 0;%>
    <% page.posts.each(function(post, i){ number++; %>      
      <% var year = post.date.year(); %>
      <% if (last != year){ %>
        <% if (last != null){ %>
          </div></section>
        <% } %>
        <% last = year; %>
        <section class="archives-wrap">
          <div class="archive-year-wrap def-font">
            <a href="<%- url_for(config.archive_dir + '/' + year) %>" class="archive-year"><%= year %></a>
          </div>
          <div class="archives">
      <% } %>
        
      <!-- show archive post section-->
        <%- partial('partial/archive-post', {post: post, build_section: ((number % 2) == 0) }) %>
    <% }) %>

    <% if (page.posts.length){ %>
      </div></section>
    <% } %>
  <% } %>
  <% if (page.total > 1){ %>
    <nav id="page-nav">
      <% var prev_text = "&laquo; " + __('prev');var next_text = __('next') + " &raquo;"%>
      <%- paginator({
        prev_text: prev_text,
        next_text: next_text
      }) %>
    </nav>
  <% } %>
  